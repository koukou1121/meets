<div class="container-fluid" style="background:#f9f9f9; ">
<%= form_for(@freetime) do |f| %>
  <label class="control-label" ><%= t('MtgPoint') %></label>
  <%= f.text_field :place, id: 'pac-input', class: ['form-control', 'controls'] %></br>
  <div id="type-selector" class="controls">
    <input type="radio" name="type" id="changetype-all" checked="checked">
    <label for="changetype-all">All</label>

    <input type="radio" name="type" id="changetype-establishment">
    <label for="changetype-establishment">Establishments</label>

    <input type="radio" name="type" id="changetype-address">
    <label for="changetype-address">Addresses</label>

    <input type="radio" name="type" id="changetype-geocode">
    <label for="changetype-geocode">Geocodes</label>
    </div>
  <div id="map"></div>

  <label class="control-label" for=""><%= t('MtgDate') %></label></br>
  <%= f.datetime_select :time, class: 'form-control' %></br></br>
  <label class="control-label" for=""></label>
  <%= f.label :lang, t('YrLang') %></br>
  <%= f.select :lang, [[t('Unspecified'), nil], [t('English'), "en"], [t('Japanese'), "ja"]], class: "form-control" %></br>
  </br>
  <%= t('comment') %></br>
  <%= f.text_field :comments, class: 'form-control' %></br>
  </br>
  <%= f.submit t('create'), class: 'btn btn-primary' %></br>
<% end %>
</div>

